<section class="card shadow-sm">
  <div class="card-body">
    <h2 class="h5 mb-3 text-danger">Delete Client</h2>

    <div class="alert alert-warning">
      Are you sure you want to delete this client?
    </div>

    <ul class="list-group mb-3">
      <li class="list-group-item">
        <strong>Client ID:</strong> <%= clientt.id %>
      </li>
      <li class="list-group-item">
        <strong>Full Name:</strong> <%= clientt.fullName %>
      </li>
      <li class="list-group-item">
        <strong>Email:</strong> <%= clientt.email %>
      </li>
      <li class="list-group-item">
        <strong>Risk Category:</strong> <%= clientt.riskCategory %>
      </li>
      <li class="list-group-item">
        <strong>Created Date:</strong> <%= clientt.createdDate %>
      </li>
    </ul>

    <form action="/clients/<%= clientt.id %>/delete" method="POST">
      <div class="d-flex gap-2">
        <button type="submit" class="btn btn-danger">
          Yes, Delete
        </button>

        <a href="/clients/<%= clientt.id %>" class="btn btn-secondary">
          Cancel
        </a>
      </div>
    </form>

  </div>
</section>